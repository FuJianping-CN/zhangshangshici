@import "../../style/content_list.wxss";
.workbench {
  font-size: 30rpx;
  background: #fff;
  padding-top: 30rpx;
  margin-bottom: 10rpx;
  color: #333;
}

.workbench .list {
  display: flex;
  flex-direction: row;
  flex: 1;
  width: 100%;
  flex-flow: row wrap;
}

.workbench .items {
  width: 160rpx;
  flex: 1;
  text-align: center;
}

.workbench .items text {
  display: block;
  text-align: center;
  margin-top: 10rpx;
}

.divider {
  border-bottom: 12px solid #f2f2f2;
  padding: 10px;
  display: flex;
  flex-direction: row;
}

.recommend {
  padding-bottom: 20px;
}

.dividerLine {
  border-bottom:1px solid #E6E6E6;
  padding:5px;
  display:flex;
  flex-direction:row;
}


/* 查找结果 */
.page.list{
    width: 100%;
    background-color: #ebebeb;
    padding-top: 0;
}
.home-content{
    padding: 0
}
.navigator-hover{
    background-color: #fff;
    color: #337ab7;
}
.weui-cells{
  background-color: inherit;
  padding-top: 5px;
}
.poem-item{
  display: block;
  background-color: #fff;
  padding:8px 10px;
  margin:8px 10px;
  border-radius:5px;
  border:none;
  position:relative;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
}
.poem-item view{
    width:100%;
    display: block;
    text-overflow:ellipsis;
    white-space:nowrap;
    overflow:hidden;
}
.poem-item .poem-title{
    color: #333;
    font-size: 16px;
}
.poem-item .poem-author{
    color: #337ab7;
    font-size: 16px;
    /* padding: 5px 0; */
    text-align: right;
    margin-top: 5px;
}
.poem-item .poem-content{
    font-size: 14px;
    color: #454545;
}
.nav-list{
     background: #fff; 
    width: 100%;
}
.nav-list .weui-flex__item{
    text-align: center;
    font-size: 12px;
    line-height: 20px;
    padding:8px 0;
    color: #666;
}
.nav-list image{
    width: 20px;
    height: 20px;
    vertical-align:middle;
}
.nav-list .left{
  min-width: 60px;
  text-align: right;
}
.nav-list .right{
  text-align: left;
  color: #337ab7;
}

.total {
  font-size: 17px;
}

.search {
  color: rgb(22, 160, 206);
  font-size: 15px;
  padding-left: 20px;
}